<%- include('../layouts/base') { body: `
<!-- Setup Landing Page - Choose Configuration Wizard -->
<div class="max-w-4xl mx-auto">
    <!-- Welcome Banner -->
    <div class="bg-gradient-to-r from-tenant-primary to-tenant-secondary rounded-lg p-8 mb-8 text-white">
        <div class="flex items-center">
            <div class="bg-white bg-opacity-20 rounded-full p-3 mr-4">
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold">System Configuration</h1>
                <p class="text-lg text-white text-opacity-90 mt-1">
                    Set up your school management system with guided wizards
                </p>
            </div>
        </div>
    </div>

    <!-- Wizard Cards -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
        <% wizards.forEach(wizard => { %>
            <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow duration-200">
                <div class="p-6">
                    <!-- Wizard Icon & Title -->
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center">
                            <div class="bg-tenant-primary bg-opacity-10 rounded-lg p-3 mr-4">
                                <% if (wizard.id === 'trust-setup') { %>
                                    <svg class="w-6 h-6 text-tenant-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                    </svg>
                                <% } %>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold text-gray-900"><%= wizard.name %></h3>
                                <p class="text-gray-600 text-sm mt-1"><%= wizard.description %></p>
                            </div>
                        </div>
                        
                        <!-- Status Badge -->
                        <% 
                            const wizardSession = locals.session?.wizards?.[wizard.id];
                            const isStarted = wizardSession && wizardSession.completedSteps.length > 0;
                            const isCompleted = wizardSession && wizardSession.completedSteps.length === wizard.steps.length;
                            const progress = wizardSession ? Math.round((wizardSession.completedSteps.length / wizard.steps.length) * 100) : 0;
                        %>
                        <% if (isCompleted) { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                Completed
                            </span>
                        <% } else if (isStarted) { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <%= progress %>% Complete
                            </span>
                        <% } else { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                Not Started
                            </span>
                        <% } %>
                    </div>

                    <!-- Progress Bar (if started) -->
                    <% if (isStarted && !isCompleted) { %>
                        <div class="mb-4">
                            <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
                                <span>Progress</span>
                                <span><%= progress %>%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-tenant-primary h-2 rounded-full transition-all duration-300" style="width: <%= progress %>%"></div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Wizard Steps Overview -->
                    <div class="mb-6">
                        <h4 class="text-sm font-medium text-gray-900 mb-3">Configuration Steps:</h4>
                        <div class="space-y-2">
                            <% wizard.steps.forEach((step, index) => { %>
                                <% 
                                    const stepCompleted = wizardSession && wizardSession.completedSteps.includes(step.id);
                                %>
                                <div class="flex items-center text-sm">
                                    <% if (stepCompleted) { %>
                                        <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class="text-green-700"><%= step.title %></span>
                                    <% } else { %>
                                        <div class="w-4 h-4 rounded-full border-2 border-gray-300 mr-2 flex-shrink-0"></div>
                                        <span class="text-gray-600"><%= step.title %></span>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center space-x-3">
                        <% if (isCompleted) { %>
                            <a href="/setup/<%= wizard.id %>" 
                               class="flex-1 btn-secondary">
                                Review Configuration
                            </a>
                            <button type="button" 
                                    onclick="confirmReconfigure('<%= wizard.id %>')"
                                    class="btn-outline">
                                Reconfigure
                            </button>
                        <% } else if (isStarted) { %>
                            <a href="/setup/<%= wizard.id %>" 
                               class="flex-1 btn-primary">
                                Continue Setup
                            </a>
                            <button type="button" 
                                    onclick="confirmRestart('<%= wizard.id %>')"
                                    class="btn-outline text-red-600 border-red-300 hover:bg-red-50">
                                Restart
                            </button>
                        <% } else { %>
                            <a href="/setup/<%= wizard.id %>" 
                               class="flex-1 btn-primary">
                                Start Configuration
                            </a>
                        <% } %>
                    </div>

                    <!-- Wizard Metadata -->
                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <div class="flex items-center justify-between text-xs text-gray-500">
                            <span><%= wizard.steps.length %> steps</span>
                            <% if (wizard.timeoutMinutes) { %>
                                <span><%= wizard.timeoutMinutes %> min timeout</span>
                            <% } %>
                            <% if (wizard.saveProgress) { %>
                                <span>Auto-save enabled</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Quick Actions -->
    <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <a href="/dashboard" 
               class="flex items-center p-3 bg-white rounded-lg border hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6h-8V5z"/>
                </svg>
                <span class="text-sm font-medium text-gray-900">Back to Dashboard</span>
            </a>
            
            <a href="/setup/import" 
               class="flex items-center p-3 bg-white rounded-lg border hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                </svg>
                <span class="text-sm font-medium text-gray-900">Import Configuration</span>
            </a>
            
            <a href="/setup/export" 
               class="flex items-center p-3 bg-white rounded-lg border hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <span class="text-sm font-medium text-gray-900">Export Configuration</span>
            </a>
        </div>
    </div>
</div>

<!-- JavaScript for actions -->
<script>
    function confirmRestart(wizardId) {
        if (confirm('Are you sure you want to restart this wizard? All progress will be lost.')) {
            fetch(\`/setup/\${wizardId}/restart\`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert('Error restarting wizard: ' + (data.error?.message || 'Unknown error'));
                    }
                })
                .catch(err => alert('Error restarting wizard: ' + err.message));
        }
    }
    
    function confirmReconfigure(wizardId) {
        if (confirm('This will allow you to modify your existing configuration. Continue?')) {
            window.location.href = \`/setup/\${wizardId}\`;
        }
    }
</script>
` } %>