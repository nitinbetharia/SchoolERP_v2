<!DOCTYPE html>
<html lang="en" data-theme="<%= locals.trust?.theme || 'default' %>">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= locals.description || 'Secure access to your School ERP system' %>">
    <title><%= title || 'Sign In' %> | <%= locals.trust?.name || 'School ERP' %></title>
    
    <!-- Security headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-Frame-Options" content="DENY">
    <meta http-equiv="X-XSS-Protection" content="1; mode=block">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/app.css">
    
    <!-- Tenant-specific theme -->
    <% if (locals.trust?.theme_css) { %>
        <style><%= locals.trust.theme_css %></style>
    <% } %>
</head>
<body class="min-h-screen bg-gradient-to-br from-tenant-bg via-gray-50 to-tenant-primary/5 font-sans antialiased">
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-tenant-primary text-white px-4 py-2 rounded-md z-50 transition-all duration-200">
        Skip to main content
    </a>

    <!-- Background pattern -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <svg class="absolute left-1/2 top-0 -ml-64 w-128 h-128 text-tenant-primary opacity-5 transform -translate-y-16" fill="currentColor" viewBox="0 0 144 144">
            <defs>
                <pattern id="auth-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                    <rect x="0" y="0" width="4" height="4" fill="currentColor"/>
                </pattern>
            </defs>
            <rect width="144" height="144" fill="url(#auth-pattern)"/>
        </svg>
    </div>

    <!-- Main container -->
    <div class="min-h-screen flex">
        <!-- Left panel - Hero section (hidden on mobile) -->
        <div class="hidden lg:flex lg:w-1/2 xl:w-2/5 bg-tenant-primary relative">
            <!-- Decorative background -->
            <div class="absolute inset-0 bg-gradient-to-br from-tenant-primary to-tenant-secondary opacity-90"></div>
            
            <!-- Content -->
            <div class="relative z-10 flex flex-col justify-center px-8 xl:px-12 2xl:px-16 text-white">
                <!-- Logo/Brand -->
                <div class="mb-8">
                    <% if (locals.trust?.logo) { %>
                        <img class="h-12 w-auto mb-4" src="<%= locals.trust.logo %>" alt="<%= locals.trust.name %> Logo">
                    <% } else { %>
                        <div class="h-12 w-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center mb-4">
                            <span class="text-white font-bold text-xl">ERP</span>
                        </div>
                    <% } %>
                    <h1 class="text-3xl xl:text-4xl font-bold leading-tight">
                        <%= locals.trust?.name || 'School ERP System' %>
                    </h1>
                    <p class="text-xl xl:text-2xl text-white/90 font-light mt-2">
                        Empowering Education Excellence
                    </p>
                </div>

                <!-- Features highlight -->
                <div class="space-y-6">
                    <h2 class="text-xl font-semibold mb-6">Comprehensive School Management</h2>
                    
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0 w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium">Student Management</h3>
                            <p class="text-white/80 text-sm">Complete student lifecycle from admission to graduation</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0 w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium">Financial Management</h3>
                            <p class="text-white/80 text-sm">Automated fee collection and comprehensive reporting</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0 w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"/>
                                <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-medium">Secure & Reliable</h3>
                            <p class="text-white/80 text-sm">Enterprise-grade security with role-based access</p>
                        </div>
                    </div>
                </div>

                <!-- Trust information (if available) -->
                <% if (locals.trust?.settings?.established_year) { %>
                    <div class="mt-12 pt-8 border-t border-white border-opacity-20">
                        <p class="text-white/80 text-sm">
                            Serving education since <%= locals.trust.settings.established_year %>
                        </p>
                    </div>
                <% } %>
            </div>

            <!-- Decorative elements -->
            <div class="absolute bottom-0 left-0 w-32 h-32 bg-white bg-opacity-10 rounded-full -mb-16 -ml-16"></div>
            <div class="absolute top-20 right-0 w-20 h-20 bg-white bg-opacity-10 rounded-full -mr-10"></div>
        </div>

        <!-- Right panel - Auth form -->
        <div class="flex-1 flex flex-col justify-center py-8 sm:py-12 px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-16">
            <!-- Mobile header (shown only on small screens) -->
            <div class="lg:hidden mb-8 text-center">
                <% if (locals.trust?.logo) { %>
                    <img class="h-10 w-auto mx-auto mb-4" src="<%= locals.trust.logo %>" alt="<%= locals.trust.name %> Logo">
                <% } else { %>
                    <div class="h-10 w-10 bg-tenant-primary rounded-lg flex items-center justify-center mx-auto mb-4">
                        <span class="text-white font-bold text-sm">ERP</span>
                    </div>
                <% } %>
                <h1 class="text-2xl font-bold text-gray-900">
                    <%= locals.trust?.name || 'School ERP' %>
                </h1>
            </div>

            <!-- Main content area -->
            <main id="main-content" class="w-full max-w-sm sm:max-w-md lg:max-w-lg xl:max-w-xl mx-auto" role="main">
                <!-- Flash Messages -->
                <% if (locals.flash) { %>
                    <%- include('../partials/alerts', { flash: locals.flash }) %>
                <% } %>

                <!-- Form content -->
                <%- body %>
            </main>

            <!-- Footer -->
            <div class="mt-8 text-center">
                <p class="text-xs sm:text-sm text-gray-500">
                    Â© <%= new Date().getFullYear() %> <%= locals.trust?.name || 'School ERP' %>. 
                    <span class="hidden sm:inline">All rights reserved.</span>
                </p>
                <div class="mt-2 space-x-4 text-xs sm:text-sm">
                    <a href="/privacy" class="text-tenant-primary hover:text-tenant-secondary transition-colors">Privacy Policy</a>
                    <a href="/terms" class="text-tenant-primary hover:text-tenant-secondary transition-colors">Terms of Service</a>
                    <a href="/support" class="text-tenant-primary hover:text-tenant-secondary transition-colors">Support</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/main.js"></script>

    <!-- Focus management for accessibility -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus first input field
            const firstInput = document.querySelector('input:not([type="hidden"])');
            if (firstInput) {
                firstInput.focus();
            }

            // Handle form submission loading states
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.classList.add('opacity-75');
                        
                        // Re-enable after 10 seconds as fallback
                        setTimeout(() => {
                            submitBtn.disabled = false;
                            submitBtn.classList.remove('opacity-75');
                        }, 10000);
                    }
                });
            });
        });

        // Handle escape key to clear forms
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const activeForm = document.querySelector('form');
                if (activeForm && confirm('Clear form data?')) {
                    activeForm.reset();
                    const firstInput = activeForm.querySelector('input:not([type="hidden"])');
                    if (firstInput) firstInput.focus();
                }
            }
        });
    </script>

    <!-- Performance monitoring (production only) -->
    <% if (process.env.NODE_ENV === 'production') { %>
        <script>
            // Monitor authentication performance
            window.addEventListener('load', function() {
                const navTiming = performance.getEntriesByType('navigation')[0];
                if (navTiming && navTiming.loadEventEnd > 3000) {
                    // Log slow page loads for optimization
                    fetch('/api/v1/performance', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            type: 'auth_page_load',
                            duration: navTiming.loadEventEnd,
                            trust: '<%= locals.trust?.slug %>'
                        })
                    }).catch(() => {});
                }
            });
        </script>
    <% } %>
</body>
</html>