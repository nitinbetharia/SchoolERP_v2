<%- include('../layouts/base', { body: `
<!-- AUTH-02-001: Session Login -->
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Welcome back to <%= locals.trust?.name || 'School ERP' %>
            </p>
        </div>
        
        <!-- Flash Messages -->
        <% if (locals.flash) { %>
            <div class="rounded-md bg-red-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">
                            <%= locals.flash.error?.message || 'Login failed' %>
                        </h3>
                    </div>
                </div>
            </div>
        <% } %>

        <form class="mt-8 space-y-6" method="POST" action="/auth/login">
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="email" class="sr-only">Email address</label>
                    <input 
                        id="email" 
                        name="email" 
                        type="email" 
                        autocomplete="email" 
                        required 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-tenant-primary focus:border-tenant-primary focus:z-10 sm:text-sm" 
                        placeholder="Email address"
                        value="<%= locals.formData?.email || '' %>"
                    >
                    <% if (locals.fieldErrors?.email) { %>
                        <p class="mt-1 text-sm text-red-600"><%= locals.fieldErrors.email %></p>
                    <% } %>
                </div>
                <div>
                    <label for="password" class="sr-only">Password</label>
                    <input 
                        id="password" 
                        name="password" 
                        type="password" 
                        autocomplete="current-password" 
                        required 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-tenant-primary focus:border-tenant-primary focus:z-10 sm:text-sm" 
                        placeholder="Password"
                    >
                    <% if (locals.fieldErrors?.password) { %>
                        <p class="mt-1 text-sm text-red-600"><%= locals.fieldErrors.password %></p>
                    <% } %>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input 
                        id="remember-me" 
                        name="remember_me" 
                        type="checkbox" 
                        class="h-4 w-4 text-tenant-primary focus:ring-tenant-primary border-gray-300 rounded"
                        <%= locals.formData?.remember_me ? 'checked' : '' %>
                    >
                    <label for="remember-me" class="ml-2 block text-sm text-gray-900">
                        Remember me
                    </label>
                </div>

                <div class="text-sm">
                    <a href="/auth/forgot-password" class="font-medium text-tenant-primary hover:text-tenant-secondary">
                        Forgot your password?
                    </a>
                </div>
            </div>

            <div>
                <button 
                    type="submit" 
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-tenant-primary hover:bg-tenant-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-tenant-primary"
                >
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-tenant-primary-light group-hover:text-tenant-secondary-light" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </span>
                    Sign in
                </button>
            </div>
        </form>

        <!-- Help -->
        <div class="text-center">
            <p class="text-sm text-gray-600">
                Need help? Contact your administrator
            </p>
        </div>
    </div>
</div>
` }) %>